<body>

  <h1>Task Manager</h1>

  <textarea id="input" rows="4" placeholder="e.g. Lecture preparation: cloud computing, 1; Dinner, 2; Walk dog, 3">Lecture preparation: cloud computing, 1; Dinner with Prof. Wong, 2; Walk my dog, 3; Lecture preparation: probability, 1</textarea>

  <div class="buttons">
    <button id="btn_add">ADD</button>
    <button id="btn_toggle">TOGGLE COMPLETED</button>
    <button id="btn_email">ðŸ“§ EMAIL TASKS</button>
  </div>

  <ol id="task-list"></ol>

  <script>
    const input     = document.getElementById('input');
    const btnAdd    = document.getElementById('btn_add');
    const btnToggle = document.getElementById('btn_toggle');
    const btnEmail  = document.getElementById('btn_email');
    const list      = document.getElementById('task-list');

    let hideCompleted = false;

    function addTasks() {
      const text = input.value.trim();
      if (!text) return;

      const entries = text.split(';')
        .map(s => s.trim())
        .filter(Boolean);

      entries.forEach(entry => {
        const [taskPart, prioStr] = entry.split(',').map(s => s.trim());
        if (!taskPart) return;

        const priority = parseInt(prioStr) || 2;
        const cleanPrio = Math.max(1, Math.min(3, priority)); // clamp 1â€“3

        const li = document.createElement('li');
        li.className = `task-item priority-${cleanPrio}`;
        li.dataset.priority = cleanPrio;

        const span = document.createElement('span');
        span.textContent = taskPart;
        li.appendChild(span);

        // Single click â†’ toggle complete
        li.addEventListener('click', (e) => {
          if (e.detail === 1) {  // single click
            li.classList.toggle('completed');
            updateToggleButtonState();
          }
        });

        // Double click â†’ delete with confirm (bonus)
        li.addEventListener('dblclick', () => {
          if (confirm(`Delete task:\n"${taskPart}" ?`)) {
            li.remove();
            updateToggleButtonState();
          }
        });

        list.appendChild(li);
      });

      input.value = ''; // optional: clear after add
      updateToggleButtonState();
    }

    function updateToggleButtonState() {
      const hasCompleted = list.querySelectorAll('.completed').length > 0;
      btnToggle.disabled = !hasCompleted;
      btnToggle.textContent = hideCompleted ? "SHOW COMPLETED" : "HIDE COMPLETED";
    }

    // Add button
    btnAdd.onclick = addTasks;

    // Enter to add (without shift)
    input.addEventListener('keydown', e => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        addTasks();
      }
    });

    // Toggle completed visibility
    btnToggle.onclick = () => {
      hideCompleted = !hideCompleted;
      list.classList.toggle('hide-completed-mode', hideCompleted);

      document.querySelectorAll('.completed').forEach(el => {
        el.classList.toggle('hidden-completed', hideCompleted);
      });

      updateToggleButtonState();
    };

    // Email tasks (very basic â€“ opens mail client)  [bonus]
    btnEmail.onclick = () => {
      const tasks = Array.from(list.children)
        .map(li => {
          const prio = li.dataset.priority;
          const text = li.querySelector('span').textContent;
          const status = li.classList.contains('completed') ? '[DONE]' : '';
          return `${prio}. ${text} ${status}`;
        })
        .join('\n');

      if (!tasks.trim()) {
        alert("No tasks to send.");
        return;
      }

      const subject = "My Task List - " + new Date().toLocaleDateString();
      const body = encodeURIComponent("Current tasks:\n\n" + tasks);
      window.location.href = `mailto:yourname@example.com?subject=${encodeURIComponent(subject)}&body=${body}`;
    };

    // Initial load example
    addTasks();
  </script>
</body>
</html>
